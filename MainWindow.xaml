<Window x:Class="FolderHabits.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Folder Habits" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Input Section -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Title:" Margin="0,0,0,5"/>
            <TextBox x:Name="TitleTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Folder:" Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="FolderTextBox" Grid.Column="0" Margin="0,0,5,0"/>
                <Button Content="Browse" Grid.Column="1" Click="BrowseButton_Click" Padding="5,0"/>
            </Grid>
        </StackPanel>

        <!-- Add Button -->
        <Button Grid.Row="1" Content="Add Habit" Click="AddButton_Click" 
                HorizontalAlignment="Left" Padding="10,5" Margin="0,0,0,10" Width="100"/>

        <!-- Habits List -->
        <ListView Grid.Row="2" x:Name="HabitsListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding Title}" FontWeight="Bold" Margin="0,0,10,0" Width="150"/>
                        <TextBlock Grid.Column="1" Text="{Binding FolderPath}" TextTrimming="CharacterEllipsis" ToolTip="{Binding FolderPath}"/>
                        <TextBlock Grid.Column="2" Text="{Binding CreatedAt, StringFormat='Added: {0:d}'}" Foreground="Gray" Margin="10,0,0,0"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>